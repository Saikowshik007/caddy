jobtrackai.duckdns.org {
    # JobTrak API endpoints
    handle /api/* {
        # Updated to match the container name in your docker-compose.yml
        reverse_proxy jobtrak-api:8000
    }

    # Health check endpoint
    handle /health {
        # Updated to match the container name
        reverse_proxy jobtrak-api:8000
    }

    # Learning Platform endpoints (existing)
    handle /learn/* {
        reverse_proxy learning-platform-backend:5000
    }

    # Root endpoint
    handle / {
        respond "JobTrak Services Running" 200
    }
}
